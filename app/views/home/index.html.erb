<%= form_for Post.new do |f| %>
  <div class="form-group">
    <%= f.text_area :description %>
  </div>
  <div class="form-group">
    <%= f.file_field :images %>
  </div>
  <div class="form-group">
    <% f.text_field :user_id, value: current_user, class:'d-none' %>
  </div>
  <br>
  <div class="text-center">
    <%= f.submit 'Create Post', class: 'btn btn-primary' %>
  </div>
<% end %>


<div class="posts">
  <% @posts.each do |post| %>
  <section class="post">
<div class="user">
  <div class="avatar">
    <%= post.image %>
  </div>
  <div class="username">
    <%= post.user.username %>
  </div>
</div>
<%= post.image %>
<div class="description">
  <%= post.description %>
</div>
</section>
  <% end %>
</div>
